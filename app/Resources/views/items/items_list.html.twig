{% extends 'layouts/master.layout.html.twig' %}
{% block title %} Items List {% endblock %}

{% block content %}
    <div class="col-lg 2 col-md 4">
        <table class="table">
            <thead>
            <tr>
                <th>Item Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Release Date</th>
                <th>Expiration Date</th>
            </tr>
            </thead>
            <tbody>
            {% for item in items %}
                <tr>
                        <td>{{ item.itemName }}></td>
                        <td>{{ item.price }}></td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ item.releaseDate| date("m/d/Y") }}</td>
                        <td>{{ item.expirationDate| date("m/d/Y") }}</td>
                    <td>
                        <a href="/items_list/{{ item.id }}"><button type="button" class="btn btn-success">View</button></a>
                        <a href="/items_list/edit/{{ item.id }}"><button type="button" class="btn btn-warning">Edit</button></a>
                        <a href="/items_list/delete/{{ item.id }}"><button type="button" class="btn btn-danger">Delete</button></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <a href="{{ path('storage_keeper_dashboard') }}"><button type="button" class="btn btn-primary">Back</button></a>
    <a href="{{ path('add item') }}"><button type="button" class="btn btn-info">Add Item</button></a>

{% endblock %}